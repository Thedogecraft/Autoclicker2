<ui:FluentWindow
    x:Class="Autoclicker.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Autoclicker"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="Simple Auto Clicker"
    Width="500"
    Height="650"
    MinWidth="500"
    MinHeight="650"
    MaxWidth="500"
    MaxHeight="650"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    ExtendsContentIntoTitleBar="True"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    WindowBackdropType="Mica"
    WindowCornerPreference="Round"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Title Bar  -->
        <ui:TitleBar Title="Simple Auto Clicker" Grid.Row="0">
            <ui:TitleBar.Icon>
                <ui:ImageIcon Source="pack://application:,,,/Assets/logonew.ico" />
            </ui:TitleBar.Icon>
        </ui:TitleBar>

        <!--  Main Content - Scrollable  -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid Margin="24,10,24,10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!--  Status Panel  -->
                <ui:Card
                    Grid.Row="0"
                    Margin="0,0,0,16"
                    Padding="16">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock
                                FontSize="16"
                                FontWeight="SemiBold"
                                Text="Status" />
                            <TextBlock x:Name="StatusText" Text="Ready - Press hotkey to start" />
                        </StackPanel>
                        <Ellipse
                            x:Name="StatusIndicator"
                            Grid.Column="1"
                            Width="16"
                            Height="16"
                            Margin="8,0,0,0"
                            Fill="Gray" />
                    </Grid>
                </ui:Card>

                <!--  Click Speed Section  -->
                <ui:Card
                    Grid.Row="1"
                    Margin="0,0,0,16"
                    Padding="16">
                    <StackPanel>
                        <TextBlock
                            FontSize="16"
                            FontWeight="SemiBold"
                            Text="Click Speed" />
                        <Grid Margin="0,10,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="100" />
                            </Grid.ColumnDefinitions>
                            <Slider
                                x:Name="ClickSpeedSlider"
                                Grid.Column="0"
                                Grid.ColumnSpan="2"
                                IsDirectionReversed="True"
                                IsSnapToTickEnabled="True"
                                Maximum="2000"
                                Minimum="1"
                                TickFrequency="10"
                                ValueChanged="ClickSpeedSlider_ValueChanged"
                                Value="100" />

                        </Grid>
                        <Grid Margin="0,5,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Slow" />
                            <TextBlock Grid.Column="2" Text="Fast" />
                        </Grid>
                        <TextBlock
                            x:Name="ClickSpeedLabel"
                            Margin="0,5,0,0"
                            Text="Clicking every 100 ms (10 clicks per second)" />
                    </StackPanel>
                </ui:Card>

                <!--  Configuration Section  -->
                <ui:Card
                    Grid.Row="2"
                    Margin="0,0,0,16"
                    Padding="16">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" Margin="0,0,8,0">
                            <TextBlock
                                FontSize="16"
                                FontWeight="SemiBold"
                                Text="Mouse Button" />
                            <RadioButton
                                x:Name="LeftClickRadio"
                                Margin="0,10,0,0"
                                Content="Left Click"
                                IsChecked="True" />
                            <RadioButton
                                x:Name="RightClickRadio"
                                Margin="0,5,0,0"
                                Content="Right Click" />
                            <RadioButton
                                x:Name="MiddleClickRadio"
                                Margin="0,5,0,0"
                                Content="Middle Click" />
                        </StackPanel>
                        <StackPanel Grid.Column="1" Margin="8,0,0,0">
                            <TextBlock
                                FontSize="16"
                                FontWeight="SemiBold"
                                Text="Hotkey" />
                            <ComboBox
                                x:Name="HotkeyComboBox"
                                Margin="0,10,0,0"
                                SelectionChanged="HotkeyComboBox_SelectionChanged">
                                <ComboBoxItem Content="F6" />
                                <ComboBoxItem Content="F7" />
                                <ComboBoxItem Content="F8" IsSelected="True" />
                                <ComboBoxItem Content="F9" />
                                <ComboBoxItem Content="F10" />
                                <ComboBoxItem Content="F11" />
                                <ComboBoxItem Content="F12" />
                            </ComboBox>
                            <TextBlock
                                Margin="0,5,0,0"
                                FontStyle="Italic"
                                Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                Text="Press the same key to stop" />
                        </StackPanel>
                    </Grid>
                </ui:Card>

                <!--  Advanced Options  -->
                <Expander
                    Grid.Row="3"
                    Margin="0,0,0,10"
                    Header="Advanced Options"
                    IsExpanded="False">
                    <Border
                        Padding="16"
                        Background="{DynamicResource ControlFillColorDefaultBrush}"
                        CornerRadius="8">
                        <StackPanel>
                            <!--<CheckBox x:Name="RandomDelayCheckBox" Content="Add random delay (±25%)" />-->

                            <Grid Margin="0,10,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Grid.Column="0"
                                    VerticalAlignment="Center"
                                    Text="Click count limit: " />
                                <ui:NumberBox
                                    x:Name="ClickLimitBox"
                                    Grid.Column="1"
                                    Margin="10,0,0,0"
                                    Maximum="10000"
                                    Minimum="0"
                                    PlaceholderText="0 = Unlimited"
                                    ValueChanged="ClickLimitBox_ValueChanged"
                                    Value="0" />
                            </Grid>
                        </StackPanel>
                    </Border>
                </Expander>
            </Grid>
        </ScrollViewer>

        <!--  Bottom Action Bar - Fixed Position  -->
        <Grid Grid.Row="2" Margin="24,10,24,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Button
                x:Name="StartStopButton"
                Grid.Column="1"
                Padding="20,10"
                HorizontalAlignment="Right"
                Click="StartStopButton_Click"
                Content="Start Clicking">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="6" />
                    </Style>
                </Button.Resources>
            </Button>

            <StackPanel
                Grid.Column="0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <TextBlock Text="Made by " />
                <TextBlock
                    Cursor="Hand"
                    Foreground="{DynamicResource SystemAccentColorBrush}"
                    MouseDown="TextBlock_MouseDown"
                    Text="Thedogecraft" />
            </StackPanel>
        </Grid>
    </Grid>
</ui:FluentWindow>